{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "commonjs": true
  },

  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],

  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "RequestInit": true,
    "HeadersInit": true,
    "BodyInit": true
  },
  "rules": {
    "no-unused-vars": "off",
    "no-extra-semi": "error",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 80
      }
    ]
  }
}
